#include <iostream>
using namespace std;
// TUGAS PRAKTIKUM DIRUMAH 31/03/2020 MUHAMMAD REZEKI
int main (){
// Menampilkan angka ganjil genap 100-1000 int angka_awal;
  cout << "Menampilkan bilagan ganjil genap range 100-1000 :"<< endl;
  cin >> angka_awal;

  for ( int i = 100; i <= 1000; i++ ){
	if ( i % 2 == 1 ){
		cout << i << " : Adalah bilangan ganjil " <<endl ;
	} else{
		cout << i << " : Adalah bilangan genap " <<endl ;
	}
		
}

return 0 ;	
